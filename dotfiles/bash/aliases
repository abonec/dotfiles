# System
alias proc='ps aux| grep'
alias go='gnome-open'

# Hardware
alias battery_consuming='cat /proc/acpi/battery/BAT0/state | grep "present rate"'
alias optimus_usage='lspci -vnnn | grep VGA'
alias external_monitor='xrandr --output VGA1 --mode 1280x1024'


# SSH

# Editors
alias s='sublime-text-2'
alias si='s . &'
alias open_gems='s `rvm gemset dir`'/gems/' &'

function st {
	s $* &
}

# Git
alias gs='git status'
function gg {
	git commit -v -am "$*"
}
# update all repos in current dirrectory recursively (with limited depth)
function git_pull_all {
	cur=`pwd`
	find . -type d -name .git -exec sh -c "cd \"{}\"/../ && pwd && git pull" \;
	cd $cur
}

# Ruby

function rc {
	if [ -e "./script/console" ]; then
		script/console $1
	else
		rails console $1
	fi
}
alias pst='passenger start --max-pool-size 3'
function rak {
	bundle exec rake $*
}

function change_branch {
	echo "$*" > config/deploy/staging_branch
}

function show_branch	 {
	cat config/deploy/staging_branch
}

# Bash and so on
alias breload='source ~/.bashrc'
alias bash_edit='vim ~/.bashrc'
alias bash_aliases_edit='vim ~/.bash_aliases'

# Navigating
alias tmp_folder='cd /tmp'
alias la='ls -lA'
alias cdd='cd -'
alias get_current_size="du -h | tail -n 1"


