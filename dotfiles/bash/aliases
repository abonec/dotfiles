# System
alias proc='ps aux| grep'
alias gopen='gnome-open'
alias ds=display_screen
alias gno=gnome-open

# Hardware
alias battery_consuming='cat /proc/acpi/battery/BAT0/state | grep "present rate"'
alias optimus_usage='lspci -vnnn | grep VGA'
alias external_monitor='xrandr --output VGA1 --mode 1280x1024'


# Git
alias gs='git status'
alias gd='git diff'
alias gdc='git diff --cached'
alias gra='git remote add'
alias grr='git remote rm'
alias gpu='git pull'
function gg {
	git commit -v -am "$*"
}

# Navigating
alias get_current_size="du -h | tail -n 1"

alias pbcopy='xclip -selection clipboard'
alias pbpaste='xclip -selection clipboard -o'

alias lock_screen='gnome-screensaver-command -l'
alias keep='/opt/google/chrome/google-chrome --profile-directory=Default --app-id=hmjkmjkepdijhoojdojkdfohbdgmmhki'
