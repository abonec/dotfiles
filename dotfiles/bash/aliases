function compile_mg {
	sass public/stylesheets/sass/mg_2.sass public/stylesheets/mg_2.css
	coffee -o public/javascripts/ -c public/javascripts/coffee/*.coffee
}

function watch_sass {
	sass --watch public/stylesheets/sass/clan_wars.sass:public/stylesheets/clan_wars.css
}

function watch_coffee {
	coffee --watch -o public/javascripts/ -c public/javascripts/coffee/*.coffee
}
